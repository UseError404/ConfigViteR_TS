{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-prettier/recommended",
    "stylelint-order"
  ],
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "selector-class-pattern": null,
    "scss/at-import-partial-extension": null,
    "order/properties-order": [
      "position",
      "top",
      "display",
      "width",
      "margin",
      "color"
    ],
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "use",
          "forward"
        ]
      }
    ]
  }
}